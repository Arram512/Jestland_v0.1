<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"


    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: './img/avatar.png'

    GridLayout:

        cols: 1
        spacing: 10

        MDLabel:
            text: "KivyMD library"
            font_style: "Button"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: "kivydevelopment@gmail.com"
            font_style: "Caption"
            size_hint_y: None
            height: self.texture_size[1]

        
        MDRectangleFlatIconButton:
            text: "About"
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            line_color: 1, 0, 1, 1
            theme_icon_color: "Custom"
            icon_color: 1, 0, 0, 1
            font_size: 16
            size_hint_y: None
            height: 10
            on_press: app.root.ids.manager.current= 'about_screen'


        
        MDRectangleFlatIconButton:
            text: "Contacts"
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            line_color: 1, 0, 1, 1
            theme_icon_color: "Custom"
            icon_color: 1, 0, 0, 1
            font_size: 16
            size_hint_y: None
            height: 10
            on_press: app.root.ids.manager.current= 'contacts_screen'

        

  