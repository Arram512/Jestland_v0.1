#:kivy 2.0.0
#:include ./kv/navbar.kv
#:include ./kv/ItemDrawer.kv
#:include ./kv/CardsDrawer.kv
#:include ./kv/about.kv
#:include ./kv/contacts_screen.kv
<MainWindow>:
    orientation:'vertical'

    ScreenManager:

        id: manager

        Screen:

            name: 'gestures_screen'

            MDNavigationLayout:

                ScreenManager:


                    Screen:

                        BoxLayout:
                            orientation: 'vertical'

                            MDToolbar:
                                id: toolbar
                                title: "Jestland"
                                elevation: 10
                                left_action_items: [['menu', lambda x: nav_drawer.set_state('toggle')]]



                            MDBottomNavigation:
                                id: bottom_nav

                                MDBottomNavigationItem:
                                    name: 'screen search'
                                    text: 'test'
                                    icon: 'magnify'


                                    ScreenManager:
                                        id: first_screen_manager

                                        Screen:

                                            name: "list_screen"

                                            ScrollView:

                                                do_scroll_x: False
                                                do_scroll_y: True

                                                GridLayout:
                                                    id: images
                                                    cols: 1
                                                    height: self.minimum_height
                                                    size_hint_y: None
                                                    spacing: 0

                                        Screen:

                                            name: 'item_screen'
                                            id: more_screen



                                MDBottomNavigationItem:
                                    name: 'screen 2'
                                    text: 'Добавить'
                                    icon: 'account-plus-outline'

                                MDBottomNavigationItem:
                                    name: 'screen 3'
                                    text: 'Избранное'
                                    icon: 'star'
                                
                                    GridLayout:

                                        cols: 1
                                        ScreenManager:
                                            id: favorite_screen_manager

                                            Screen:

                                                name: "favorite_screen"

                                                ScrollView:

                                                    do_scroll_x: False
                                                    do_scroll_y: True

                                                    GridLayout:
                                                        id: favorites
                                                        cols: 1
                                                        height: self.minimum_height
                                                        size_hint_y: None
                                                        spacing: 0


                                            Screen:

                                                name: 'favorite_more'
                                                id: favorite_more_screen


                        MDNavigationDrawer:

                            id: nav_drawer

                            ContentNavigationDrawer:

        Screen:

            name: 'about_screen'
            
            AboutScreen:

        Screen:
            name: 'contacts_screen'

            ContactsScreen:
        
                              
